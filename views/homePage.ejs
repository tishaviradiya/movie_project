<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/remix/remixicon.css" type="text/css"/>
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #495057;
        }

        header {
            background-color: #343a40;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        a {
            text-decoration: none;
        }

        .header h1 a {
            border: 2px solid #fff;
            padding: 10px 20px;
            border-radius: 30px;
            background-color: #343a40;
            color: #fff;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }

        .header h1 a:hover {
            background-color: #23272b;
        }

        main {
            text-align: center;
            margin: 20px;
        }

        .container {
            width: 80%;
            margin: auto;
        }

        .movie-img img {
            max-height: 100vh;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        table{
            margin-right: 40px;
        }
        .table{
            display: flex;
            margin-top: 40px;
        }
        .table  img{
            width: 100%;
            height: 500px;
            object-fit: contain;
        }
        .search{
            width: 100%;
            /* min-height: 100vh; */
            padding: 5%;
            background-image: linear-gradient(rgba(0, 8, 51, 0.246),rgba(0, 8, 51, 0.82)),url('../images/banner.webp');
            background-position: center;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }
        .search-bar{
            width: 100%;
            max-width: 680px;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            border-radius: 60px;
            padding: 10px 20px;
            backdrop-filter: blur(4px) saturate(180%);
        }
        .search-bar input{
            background: transparent;
            flex: 1;
            border: 0;
            outline: none;
            padding: 10px 10px;
            font-size: 20px;
            color: #cac7ff;
        }
        ::placeholder{
            color: #cac7ff;
        }
    </style>
</head>
<body>
    <header>
            <div class="header">
                <h1>LOGO</h1>
                <h1>Movie</h1>
                <h1><a href="/homePage/details">Add</a></h1>
            </div>
    </header> 
    <main>
        <!-- slider -->
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-bs-interval="10000">
                <img src="/images/p-1.jpg" class="d-block w-100" alt="image" height="700">
              </div>
              <div class="carousel-item" data-bs-interval="2000">
                <img src="/images/p-2.jpg" class="d-block w-100" alt="image" height="700">
              </div>
              <div class="carousel-item">
                <img src="/images/p-3.jpg" class="d-block w-100" alt="image" height="700">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
       
        <!-- search-bar  -->

        <section>
            <div class="search">
                <form action="https://www.google.com/search" method="get" class="search-bar">
                    <input type="text" placeholder="Type to search.." name="q">
                </form>
            </div>
        </section>


        <div class="table">
            <% for(let data of displayData){%>
                <table>
                    <tr>
                        <td><a href="/homePage/detailsShow"><img src="<%= data.image%>" alt="movie-img" ></a></td>
                    </tr>
                    <tr>
                        <td>Rating :<%= data.rating%></td>
                    </tr>
                    <tr>
                        <td>Date :<%= data.date%></td>
                    </tr>
                    <tr>
                        <td>Status :<%= (new Date()< new Date(data.date))?'Coming Soon' :'Released'%></td>
                    </tr>
                    <tr>
                        <td>Link : <a href="/homePage/detailsShow"><iframe width="560" height="315" src="https://www.youtube.com/embed/GBt2uYRXXTg?si=5f67Nljk-hEWZ8Ow" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe></a></td>
                    </tr>
                </table>
                <% }%>
        </div>
       
    </main>
    <!-- script -->
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>